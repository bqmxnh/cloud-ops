FROM python:3.10-slim

WORKDIR /app

# System deps
RUN apt-get update && \
    apt-get install -y git && \
    rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.retrain_arf.txt .

# Install python deps (ADD dvc[s3])
RUN pip install --no-cache-dir \
    -r requirements.retrain_arf.txt \
    dvc[s3]

# Copy source code
COPY retrain/ /app/retrain/
COPY datasets/ /app/datasets/

# Create runtime dirs
RUN mkdir -p /data /output

ENTRYPOINT ["bash"]
